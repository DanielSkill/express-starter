extends ../layout/layout

block variables
  title= "Register"

block content
  .uk-container
    .uk-grid-margin.uk-grid.uk-grid-stack(uk-grid='')
      div(class='uk-width-1-1@m')
        .uk-margin.uk-width-large.uk-margin-auto.uk-card.uk-card-default.uk-card-body.uk-box-shadow-large
          h3.uk-card-title.uk-text-center Register
          form(action="/register" method="post")
            .uk-margin
              .uk-inline.uk-width-1-1
                span.uk-form-icon(uk-icon='icon: user')
                input.uk-input(type='text' name="firstname" placeholder="Firstname")
            .uk-margin
              .uk-inline.uk-width-1-1
                span.uk-form-icon(uk-icon='icon: user')
                input.uk-input(type='text' name="lastname" placeholder="Lastname")
            .uk-margin
              .uk-inline.uk-width-1-1
                span.uk-form-icon(uk-icon='icon: user')
                input.uk-input(type='text' name="username" placeholder="Username")
            .uk-margin
              .uk-inline.uk-width-1-1
                span.uk-form-icon(uk-icon='icon: mail')
                input.uk-input(type='text' name="email" placeholder="Email")
            .uk-margin
              .uk-inline.uk-width-1-1
                span.uk-form-icon(uk-icon='icon: lock')
                input.uk-input(type='password' name="password" placeholder="Password")
            .uk-margin
              button.uk-button.uk-button-primary.uk-width-1-1 Register
            .uk-text-small.uk-text-center
              | Already got an account? 
              a(href='/login') Login